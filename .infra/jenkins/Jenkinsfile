pipeline {
    agent any
    environment {
        registry = "pixel238/firsttry"
        registryCredential = "dockerhub"
    	}
    stages {
        stage('Build') {
            steps {
                sh script: '''
                    echo "I am in build step"
                    chmod +x ./gradlew
                    ./gradlew build
                ''',
            label: "Building Project"
            }
        }
        stage('Test')
        {
            steps {
                sh script: '''
                    echo "I am in Test step"
                ''',
            label: "Running Unit Test Cases"
            }
        }
        stage('Static Code Analysis')
        {
            steps {
                  sh script: '''
                     echo "I am in sonarqube step"
                  ''',
            label: "Running Sonarqube Scan"
            }
        }
        stage('Build DockerImage')
        {
            steps {
                sh script: '''
                    echo "I am Building DockerImage ="
                    docker build --no-cache -t 'jenkins:1.0' -f .infra/docker/Dockerfile .
                ''',
            label: "Building Docker Image"
            }
        }
        stage('Publish DockerImage')
        {
            steps {
                    echo "I am Pubishing DockerImage"
                    sh "docker tag jenkins:latest pixel238/firsttry:latest"
                    sh "docker push pixel238/firsttry:latest"
            }
        }
    }
	post{
		always{
		deleteDir()
        }
    }
}